{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node"],
	"noImplicitReturns": true,
	"noUnusedLocals": true,
	"sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "../node_modules"]
}
